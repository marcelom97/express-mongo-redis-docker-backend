{
  "env": {
    // "es2020": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": "off",
    "consistent-return": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "func-names": "off",
    "no-useless-escape": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off"
  }
}
